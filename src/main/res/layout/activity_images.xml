<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_collapseParallaxMultiplier="1.0"
              android:padding="16dp"
              android:background="#eee">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fff"
            android:layout_height="250dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/city"
                android:id="@+id/imageViewImages"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:background="#33ffffff">

                <TextView
                    android:text="Nueva York"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <TextView
                    android:text="Henri Cartier-Bresson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/radioGroupImages">

            <RadioButton
                android:text="Imagen circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonCircularImages"
                android:layout_weight="1"
                android:textColor="#555"
                android:layout_marginTop="10dp"
                android:buttonTint="#555"/>

            <RadioButton
                android:text="Color sepia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1"
                android:textColor="#555"
                android:layout_marginTop="5dp"
                android:buttonTint="#555"/>

            <RadioButton
                android:text="Blanco y negro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="1"
                android:textColor="#555"
                android:layout_marginTop="5dp"
                android:buttonTint="#555"/>

            <RadioButton
                android:text="Zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton4"
                android:layout_weight="1"
                android:textColor="#555"
                android:layout_marginTop="5dp"
                android:buttonTint="#555"/>
        </RadioGroup>

    </LinearLayout>
</LinearLayout>
